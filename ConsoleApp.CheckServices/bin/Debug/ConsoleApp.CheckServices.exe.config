<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net, Version=1.2.10.0, Culture=neutral, PublicKeyToken=1b44e1d426115821" />
    <section name="CustomConfig" type="ConsoleApp.CheckServices.Config.CustomConfigsGroup, ConsoleApp.CheckServices" />
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <appSettings>
    <add key="threadInterval" value="1"/>
    <add key="DisableAutoStart" value="false"/>
  </appSettings>

  <CustomConfig>

    <Services>
      <service Name = "XblGameSave" autoStart="true"/>
      <service Name = "XboxNetApiSvc" autoStart="true"/>
    </Services>

    <ParametersEmail>
      <add
        enable = "true" ssl = "true"  SMTPServer ="smtp.gmail.com" SMTPPort = "587"
        isHTML="false" dirHtml="E:\ProjetosCSharp\CheckServices\ConsoleApp.CheckServices\index.html"
        from ="sistema.zaas@flexcontact.com.br"
        password = "flex@2019"
        Subject = "Alerta ! Servicos foram parados [Empresa: Teste] | Servicos parados: ##TotalStopped## | Servicos Reinicializados: ##TotalRecovered##"
        body = "Segue os servicos que foram parados abaixo:"
        to = "mauricio.barcelos@code7.com"
        cc ="mauricio.barcelos@code7.com"
        attachments = ""
	    />
    </ParametersEmail>

  </CustomConfig>

  <log4net>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="E:\Logs\CheckServicesLogs\CheckServices.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="50MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="MemoryAppender" type="log4net.Appender.MemoryAppender">
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="MemoryAppender" />
    </root>
  </log4net>
</configuration>